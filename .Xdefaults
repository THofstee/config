!----------------------------------------------------------------------
! c o l o r s

! special
*.foreground:   #b9b9b9
*.background:   #101010
*.cursorColor:  #ffb90f

! black
*.color0:       #101010
*.color8:       #525252

! red
*.color1:       #7c7c7c
*.color9:       #7c7c7c

! green
*.color2:       #8e8e8e
*.color10:      #8e8e8e

! yellow
*.color3:       #a0a0a0
*.color11:      #a0a0a0

! blue
*.color4:       #686868
*.color12:      #686868

! magenta
*.color5:       #747474
*.color13:      #747474

! cyan
*.color6:       #868686
*.color14:      #868686

! white
*.color7:       #b9b9b9
*.color15:      #d9d9d9

!----------------------------------------------------------------------
! e m a c s

emacs.bitmapIcon:         off
emacs.menuBar:            off
emacs.verticalScrollBars: off
emacs.toolBar:            off
emacs.cursorColor:        darkgoldenrod1
! emacs.fontBackend:        xft
! emacs.font:               xft:NotoMono:size=10:antialias=true

!----------------------------------------------------------------------
! u r x v t

! urxvt.font: xft:NimbusMonoL:size=8:antialias=true:style=Bold
! urxvt.font: xft:DejaVuSansMono:size=8:antialias=true
urxvt.font: xft:NotoMono:size=10:antialias=true
! urxvt.font: xft:NotoMono:pixelsize=10:antialias=true,\
			! xft:Ubuntu Mono:pixelsize=12:antialias=true
! urxvt.font: xft:Inconsolata for Powerline:size=10:antialias=true
! urxvt.font: xft:FreeMono:size=8:antialias=true

! graphical
urxvt.scrollBar:       false
urxvt.cursorBlink:     true
urxvt.cursorUnderline: false
urxvt.cursorColor:     darkgoldenrod1
urxvt.internalBorder:  12             ! depends on font for window size matching

! behavior
! urxvt.scrollTtyOutput:   false ! do not scroll with output
! urxvt.scrollWithBuffer:  true  ! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
! urxvt.scrollTtyKeypress: true  ! scroll back to the bottom on keypress
